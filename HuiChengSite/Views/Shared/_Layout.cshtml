
@{
    LayoutModel pageModel = HuiChengSite.Common.JsonHelper.GetZhCn<LayoutModel>("LayoutModel");
    if (LanguageModel.GetLang() == LanguageEnum.En)
    {
        pageModel = HuiChengSite.Common.JsonHelper.GetEn<LayoutModel>("LayoutModel");
    }    
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | @pageModel.CompanyName</title>
    <meta name="description" content="@ViewBag.Title @pageModel.CompanyName" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <meta itemprop="name" content="@ViewBag.Title @pageModel.CompanyName" />
    <meta itemprop="image" content="/favicon.ico" />
    <meta name="keywords" content="@(!string.IsNullOrEmpty(ViewBag.Keywords)? ViewBag.Keywords : pageModel.CompanyName)" />
    @Styles.Render("~/Content/css")
    @RenderSection("header", required: false)
</head>
<body>
    <div class="hidden"></div>
    <div class="nav">
        <div class="nav-content">
            <span class="logo"><a href="http://www.sqber.com"></a></span>
            @*<a href="/"></a>
            <a href="/">分类</a>
            <a href="/">关于</a>
            <a style="float:right;" href="/backmgr/home">管理</a>*@
            <a href="/Introduce">@pageModel.IntroName</a>
            <a href="/History">@pageModel.HistoryName</a>
            <a href="/lang/en">en</a>
            <a href="/lang/zhcn">中文</a>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <div class="copyright">
        <div>sqber  2017-@DateTime.Now.Year 冀ICP备17029815</div>
    </div>

    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    @RenderSection("footer", required: false)

    <script>
        //百度统计
    </script>

</body>
</html>